<div class="panel panel-default">
  <div class="panel-heading"><h3 class="panel-title">Tag</h3><span>last update {{unbound date_update}}</span></div>
  <div class="panel-body">

    <form class="form-horizontal" role="form">
      <div class="form-group">
        <label for="name" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-9">
          <input type="name" class="form-control" id="name" name="name" placeholder="Name of the Tag" value="{{unbound name}}" required>
        </div>
      </div>
	
      <div class="form-group">
        <label for="description" class="col-sm-2 control-label">Description</label>
        <div class="col-sm-9">
          <textarea type="description" class="form-control" rows="3" id="description" name="description" placeholder="Description of the Tag">{{unbound description}}</textarea>
        </div>
      </div>
	
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-9">
          {{#link-to 'tag.edit' model}}<button class="btn btn-primary">Change</button>{{/link-to}}
          <button type="button" class="btn btn-danger" {{action 'delete'}}>Delete Tag</button>
        </div>
      </div>
      
    </form>
  </div>
</div>