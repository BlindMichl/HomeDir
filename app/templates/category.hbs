<div class="panel panel-default">
  <div class="panel-heading"><h3 class="panel-title">Change Category</h3><span>last update {{unbound date_update}}</span></div>
  <div class="panel-body">

    <form class="form-horizontal" role="form">
      <div class="form-group">
        <label for="name" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-9">
          <input type="name" class="form-control" id="name" name="name" placeholder="Name of the Category" value="{{unbound name}}" required>
        </div>
      </div>
	
      <div class="form-group">
        <label for="description" class="col-sm-2 control-label">Description</label>
        <div class="col-sm-9">
          <textarea type="description" class="form-control" rows="3" id="description" name="description" placeholder="Description of the Category">{{unbound description}}</textarea>
        </div>
      </div>

      <div class="form-group">
        <label for="picture" class="col-sm-2 control-label">Picture</label>
        <div class="col-sm-9">
          <div class="input-group">
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-picture"></span>
            </span>
            <input type="picture" class="form-control" id="picture" name="picture" placeholder="Picture of the Category" value="{{unbound picture}}">
          </div>
        </div>
      </div>	

	
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-9">
          {{#link-to 'category.edit' model}}<button class="btn btn-primary">Change</button>{{/link-to}}
          <button type="button" class="btn btn-danger" {{action 'delete'}}>Delete Category</button>
        </div>
      </div>
      
    </form>
  </div>
</div>