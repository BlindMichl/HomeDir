<div class="panel panel-default">
	<div class="panel-heading"><h3 class="panel-title">New Shopping List</h3></div>

	<div class="panel-body">
		<form class="form-horizontal" role="form">
		<div>
			<img class="" src="images/shoppinglists/{{unbound picture}}" alt="Shoppinglist Picture" />
		</div>

		<div class="form-group">
			<label for="name" class="col-sm-2 control-label">Shopping List Name</label>
			<div class="col-sm-9">
				<div class="input-group">
					<span class="input-group-addon">
						<span class="glyphicon glyphicon-list-alt"></span>
					</span>
					<input type="text" id="name" name="name" class="form-control" placeholder='Name of the Shopping List' value="{{unbound name}}" required>
				</div>
			</div>
		</div>

		<div class="form-group">
			<label for="shop" class="col-sm-2 control-label">Shop Name</label>
			<div class="col-sm-9">
				<div class="input-group">
					<span class="input-group-addon">
						<span class="glyphicon glyphicon-shopping-cart"></span>
					</span>
					<input type="text" id="shop" name="shop" class="form-control" placeholder="Name the Shop" value="{{unbound shop.name}}">
				</div>
			</div>
		</div>
	
		<div class="form-group">
			<label for="date" class="col-sm-2 control-label">shopping date</label>
			<div class="col-sm-3">
				<div class="input-group">
					<span class="input-group-addon">
						<span class="glyphicon glyphicon-calendar"></span>
					</span>
					<input type="date" id="shop" name="shop" class="form-control" value="{{unbound date}}">
				</div>
			</div>
		</div>
	</form>		
	</div>
</div>
			
<div class="panel panel-default">
	<button type="button" class="btn btn-success" {{action 'save'}}>Update Shopping List</button>
  {{#link-to 'shoppinglist'}}<button type="button" class="btn btn-danger">Cancel</button>{{/link-to}}
</div>

<div class="panel panel-default">



	<div class="panel-heading">
    <h3 class="panel-title">Shopping List Items
      &nbsp;<button type="button" class="btn btn-success btn-xs">
  <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add
</button>
    </h3>
  </div>

	<div class="panel-body">
		<table class="table">
			<thead>
				<tr>
          <td><input type="checkbox"></td>
					<td>Product</td>
					<td>Amount</td>
					<td>Price</td>
					<td>Total</td>
				</tr>
			</thead>
			<tbody>
				{{#each shoppingitem in shoppingitems}}
				<tr>
          <td><input type="checkbox" id="chk{{unbound shoppingitem.id}}"></td>
					<td>{{shoppingitem.product.name}}</td>
					<td>{{shoppingitem.amount}}</td>
					<td>{{shoppingitem.price}}</td>
					<td>{{shoppingitem.total}}</td>
				</tr>
				{{/each}}
			</tbody>
  	</table>
	</div>
</div>