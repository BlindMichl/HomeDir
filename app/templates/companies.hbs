<div class="panel panel-default">
	<div class="panel-heading">
		<h3 class="panel-title">Companies</h3>
	</div>
	<div class="panel-body">
	
		{{#each mode as |company|}}
			<div class="panel panel-default">
				{{#link-to 'companies.company' company}}
					<div class="panel-body">

            <div class="col-md-2">
						  <img class="pull-left" src="images/companies/{{company.picture}}" width="150" style="max-height:100px">
            </div>
            <div class="col-md-3">
						  <h3>{{company.name}}</h3>
            </div>
            <div class="col-md-4">
						  <p style="overflow: hidden; width: 400px; height:50px; background: linear-gradient(to bottom right, yellow , blue);">{{company.description}}</p>
            </div>
            <div class="col-md-3">
              <span class="label label-default">test Tag</span>	
              <span class="label label-default">another tag</span>
            </div>

				</div>
					{{/link-to}}
			</div>
		{{/each}}

	</div>
</div>